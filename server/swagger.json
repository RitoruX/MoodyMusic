{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "MoodyMusic",
        "description": "MoodyMusic Application API",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "host": "localhost:3000",
    "basePath": "/api/v1",
    "tags": [{
        "name": "API",
        "description": "API for music and mood"
    }],
    "paths": {
        "/users-music": {
            "get": {
                "tags": ["API"],
                "summary": "Get music name base on people mood",
                "response": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#definitions/MoodData"
                        }
                    }
                }
            }
        },
        "/get-music/{mood-point}": {
            "post": {
                "tags": ["API"],
                "summary": "Get a random music based on mood and current nearby weather.",
                "response": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/get-musics/{mood-point}": {
            "post": {
                "tags": ["API"],
                "summary": "Get a random playlist based on mood and current nearby weather.",
                "response": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/mood-tag": {
            "get": {
                "tags": ["API"],
                "summary": "Get genres of music in each mood type.",
                "response": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/users-mood": {
            "get": {
                "tags": ["API"],
                "summary": "Get counting number in each of user's mood",
                "response": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/users-mood-genre": {
            "get": {
                "tags": ["API"],
                "summary": "Get counting of music genres in any user's mood",
                "response": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    },
    "definitions": {
        "MoodData": {
            "type": "object",
            "$ref": "#definitions/musics"
        },
        "MoodTag": {
            "properties": {
                "moodName": {
                    "type": "string"
                },
                "tags": {
                    "type": "array",
                    "tag": {
                        "type": "string"
                    }
                }
            }
        },
        "musics": {
            "type": "array"
        }
    },
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"]
}